<!doctype html>
<html lang="en">
  <head>
    {{>headerlinks}}
  </head>
  <body>
      {{>navbar}}
      <div  class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                 <form class="temp_form">
                   <input type="text" id="cityName" placeholder="Enter your city Name" autocomplete="off">
                   <input type="submit" value="search" id="subtn">
                 </form>
               </div> 
               <div class="tempInfo">
                 <div class="top_layer ">
                   <p>Here is the current weather status of your city</p>
                   {{!-- <p id="day">Tuesday</p>
                   <p id="today_date">13 OCT</p> --}}
                 </div>
                 <div class="main_layer">
                   <p id="city_name">Output</p>
                   <div class="middle_layer data_hide">
                     <p id="temp" ><span id="temp_real">0</span> <sup>o</sup>C</p>
                     <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                   </div>
                 </div>
               </div>
             
            </div>
        </div>
       </div>
       {{>footer}}
       <script src="js/main.js"></script>
